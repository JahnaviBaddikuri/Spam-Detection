@model SpamClassifierWebApp.Models.SpamCheckViewModel
@{
    ViewBag.Title = "SpamGuard";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>SMS & Email Spam Detector</title>
    <link href="https://fonts.googleapis.com/css2?family=Segoe+UI&display=swap" rel="stylesheet" />
    <style>
        /* Reset and base styles */
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        body {
            background-color: #fff;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        /* Container for all content */
        .container {
            text-align: center;
        }

        /* Title */
        .title {
            font-size: 2rem;
            font-weight: bold;
            margin-bottom: 20px;
        }

        /* Card box */
        .card {
            background: #fff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.1);
            width: 400px;
            max-width: 90%;
            margin: 0 auto;
        }

        /* Input field */
        .input-box {
            width: 100%;
            padding: 16px;
            font-size: 18px;
            border: 1px solid #ccc;
            border-radius: 8px;
            margin-bottom: 15px;
            resize: vertical; /* Add this line */
        }



        /* Button */
        .check-btn {
            width: 100%;
            background-color: #1976d2;
            color: white;
            padding: 12px;
            font-size: 16px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .check-btn:hover {
                background-color: #1565c0;
            }

        /* Result message */
        .result {
            padding: 16px;
            border: 1px solid #ccc;
            border-radius: 8px;
            margin-top: 16px;
            font-size: 16px;
        }

        .result.spam {
            border-color: #f8d7da;
            background-color: #fff5f5;
            color: #dc3545;
        }

        .result.not-spam {
            border-color: #d4edda;
            background-color: #f0fff4;
            color: #28a745;
        }

        .result .spam {
            color: #dc3545;
        }

        .result .not-spam {
            color: #28a745;
        }

        /* Progress bar wrapper */
        .progress-bar {
            background: #eee;
            border-radius: 6px;
            height: 12px;
            margin-top: 8px;
        }

        /* Actual progress fill */
        .progress {
            height: 100%;
            border-radius: 6px;
            width: 0%;
        }

        .result.spam .progress {
            background-color: #dc3545;
        }

        .result.not-spam .progress {
            background-color: #28a745;
        }

        .probability {
            font-weight: bold;
        }

        .footer {
            background-color: #f5f5f5;
            padding: 16px;
            text-align: center;
            font-size: 14px;
            color: #555;
            position: fixed;
            bottom: 0;
            left: 0;
            width: 100%;
        }

        /* Optional: Ensure content doesn’t hide behind footer */
        body::after {
            content: '';
            display: block;
            height: 60px; /* roughly the height of the footer */
        }

        body {
            background-image: url('images\\background.jpeg');
            background-repeat: no-repeat;
            background-position: center center;
            background-attachment: fixed;
            background-size: cover;
        }

        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
        }

    </style>

</head>
<body>
    <div class="container">
        <h1 class="title">SMS & Email Spam Detector</h1>

        @using (Html.BeginForm("Index", "Home", FormMethod.Post))
        {
            <div class="card">
                @Html.TextAreaFor(m => m.InputText, new { @class = "input-box", placeholder = "Enter your message...", rows = "3" })

                <button type="submit" class="check-btn">Check for Spam</button>

                @if (Model.IsSpam.HasValue && Model.SpamProbability.HasValue)
                {
                    var resultClass = Model.IsSpam == true ? "spam" : "not-spam";
                    <div class="result @resultClass">
                        <p>
                            This text is
                            <strong class="@resultClass">@((Model.IsSpam == true) ? "Spam" : "Not Spam")</strong>
                            with
                            <strong class="probability">@Model.SpamProbability.Value.ToString("F2")%</strong>
                            probability.
                        </p>
                        <div class="progress-bar">
                            <div class="progress" style="width:@Model.SpamProbability.Value%"></div>
                        </div>
                    </div>
                }

            </div>
        }
    </div>
    <div class="footer">
        Created by B Suma Reddy, Jahnavi B, Samreen Sultana.
    </div>

</body>
</html>
